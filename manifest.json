{
  "manifest_version": 3,
  "name": "Gmail Pin Extension",
  "version": "1.0",
  "description": "Pin important emails in Gmail",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://mail.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail Pin"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}